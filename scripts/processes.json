{
    "apps": [
        {
            "name": "bpb-back",
            "script": "npm",
            "args" : "start --prefix \"/vagrant/bpb-back\"",
            "watch": ["./bpb-back/src","./bpb-back/test"],
            "env":{
                "TEST":"global value"
            },
            "env_vagrant":{
                "NODE_ENV":"vagrant",
                "APIPORT":"8080",
                "DBCONNECTIONSTRING":"mongodb://127.0.0.1:27017/bpb",
                "UPLOADDIRECTORY":"/vagrant/bpb-back/uploads/",
                "MAXFILEUPLOADSIZE":"5000000",
                "COMPARISONTHRESHOLD":"100"
            }
        },
        {
        	"name": "bpb-front",
            "script": "npm",
            "args" : "run start --prefix \"/vagrant/bpb-front\"",
            "watch": ["./bpb-front/src","./bpb-front/test"],
            "env":{
                "TEST":"global value"
            },
            "env_vagrant":{
                "NODE_ENV":"vagrant",
                "REACT_APP_TESTVAR":"TESTY!",
                "REACT_APP_CLTADDR":"client placeholder address",
                "REACT_APP_SRVADDR":"server placeholder address"
            } 
        }
    ]
}
